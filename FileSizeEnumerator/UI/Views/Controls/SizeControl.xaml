<UserControl x:Class="FileSizeEnumerator.UI.SizeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileSizeEnumerator.UI"
             mc:Ignorable="d"
             x:Name="Control"
             d:DesignHeight="260" d:DesignWidth="680">
    <UserControl.DataContext>
        <local:SizeControlViewModel />
    </UserControl.DataContext>
    <Grid>
        <TextBox x:Name="SizeText" IsEnabled="{Binding IsEnabled, ElementName=Control, Mode=OneWay}" Text="{Binding Size, UpdateSourceTrigger=LostFocus}" />
        <ComboBox x:Name="Unit" IsEditable="False" IsEnabled="{Binding IsEnabled, ElementName=Control, Mode=OneWay}" ItemsSource="{Binding Units}" Text="{Binding SelectedUnit}" />
    </Grid>
</UserControl>
